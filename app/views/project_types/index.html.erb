<% content_for :title, "Project Types" %>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <p class="float-right">
                    <%= link_to 'New Project Type', new_project_type_path, class:"btn btn-success" %>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Typename</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @project_types.each do |project_type| %>
                        <tr>
                            <td><%= project_type.typeName %></td>
                            <td>
                                <%= link_to fa_icon("eye"), project_type %>
                                <%= link_to fa_icon("pen"), edit_project_type_path(project_type) %>
                                <%= link_to fa_icon("trash"), project_type, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>