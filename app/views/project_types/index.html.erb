<% content_for :title, "Project Types" %>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Typename</th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @project_types.each do |project_type| %>
                        <tr>
                            <td><%= project_type.typeName %></td>
                            <td><%= link_to 'Show', project_type %></td>
                            <td><%= link_to 'Edit', edit_project_type_path(project_type) %></td>
                            <td><%= link_to 'Destroy', project_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>

                <br>

                <%= link_to 'New Project Type', new_project_type_path %>
            </div>
        </div>
    </div>
</div>