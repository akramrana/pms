<% content_for :title, @project.projectName %>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <p class="float-right">
                    <%= link_to 'Update', edit_project_path(@project), class: "btn btn-primary" %>
                    <%= link_to 'Back', projects_path, class: "btn btn-info" %>
                </p>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td><%= @project.projectName %></td>
                        </tr>
                        <tr>
                            <th>Key</th>
                            <td><%= @project.projectKey %></td>
                        </tr>
                        <tr>
                            <th>Leader</th>
                            <td><%= @project.user.username %></td>
                        </tr>
                        <tr>
                            <th>Priority</th>
                            <td><%= @project.priorityType.priorityTypeName %></td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td><%= @project.projectDetails %></td>
                        </tr>
                        <tr>
                            <th>Time</th>
                            <td><%= @project.time %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>