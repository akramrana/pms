<% content_for :title, "Issue Types" %>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <p class="float-right">
                    <%= link_to 'New Issue Type', new_issue_type_path, class:"btn btn-success" %>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Issue Type</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        <% @issue_types.each do |issue_type| %>
                        <tr>
                            <td><%= issue_type.issueTypeName %></td>
                            <td>
                                <%= link_to fa_icon("eye"), issue_type %>
                                <%= link_to fa_icon("pen"), edit_issue_type_path(issue_type) %>
                                <%= link_to fa_icon("trash"), issue_type, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>