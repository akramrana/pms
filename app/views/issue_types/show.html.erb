<% content_for :title, @issue_type.issueTypeName %>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <p class="float-right">
                    <%= link_to 'Update', edit_issue_type_path(@issue_type), class: "btn btn-primary" %>
                    <%= link_to 'Back', issue_types_path, class: "btn btn-info" %>
                </p>
                <table class="table table-striped table-bordered">
                    <tbody>
                        <tr>
                            <th>Name</th>
                            <td><%= @issue_type.issueTypeName %></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>