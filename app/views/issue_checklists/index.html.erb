<p id="notice"><%= notice %></p>

<h1>Issue Checklists</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issue_checklists.each do |issue_checklist| %>
      <tr>
        <td><%= link_to 'Show', issue_checklist %></td>
        <td><%= link_to 'Edit', edit_issue_checklist_path(issue_checklist) %></td>
        <td><%= link_to 'Destroy', issue_checklist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue Checklist', new_issue_checklist_path %>
