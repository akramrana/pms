<% content_for :title, "Issues" %>
    <div class="row">
        <div class="col-md-12">
            <% flash.each do |type, msg| %>
              <div class="alert alert-danger">
                <%= msg %>
              </div>
            <% end %>
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p id="notice">
                                <%= notice %>
                            </p>
                            <%= form_tag(issues_path, method: :get) do %>
                              <div class="row g-3 align-items-center">
                                  <div class="col-auto">
                                    <%= text_field_tag(:search, params[:search], class: 'form-control', placeholder: "Search") %>
                                  </div>
                                  <div class="col-auto">
                                    <%= submit_tag "Filter", class: "btn btn-success" %>
                                  </div>
                              </div>
                            <% end %>
                        </div>
                        <div class="col-6">
                            <p class="float-right">
                                <%= link_to 'New Issue' , new_issue_path, class:"btn btn-success" %>
                            </p>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Project</th>
                                <th>Issue Type</th>
                                <th>Summary</th>
                                <th>Priority Type</th>
                                <th>Due Date</th>
                                <th>Assignee</th>
                                <th>Reporter</th>
                                <th>Environment</th>
                                <th>Original Estimate</th>
                                <th>Remaining Etimate</th>
                                <th>Done?</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @issues.each do |issue| %>
                                <tr>
                                    <td>
                                        <%= issue.project.projectName %>
                                    </td>
                                    <td>
                                        <%= issue.issueType.issueTypeName %>
                                    </td>
                                    <td>
                                        <%= issue.summary %>
                                    </td>
                                    <td>
                                        <%= issue.priorityType.priorityTypeName %>
                                    </td>
                                    <td>
                                        <%= issue.dueDate %>
                                    </td>
                                    <td>
                                        <%= issue.assigneeUser.username %>
                                    </td>
                                    <td>
                                        <%= issue.reporterUser.username %>
                                    </td>
                                    <td>
                                        <%= issue.environment %>
                                    </td>
                                    <td>
                                        <%= issue.originalEstimate %>
                                    </td>
                                    <td>
                                        <%= issue.remainEstimate %>
                                    </td>
                                    <td>
                                        <% if issue.done == 1 %>
                                           <i class="fa fa-check mr-2 text-success" title="Done"></i>
                                        <% else %>
                                           <i class="fa fa-clock mr-2 text-danger" title="Not Done"></i>
                                        <% end %>

                                    </td>
                                    <td>
                                        <%= link_to fa_icon("eye"), issue %>
                                        <%= link_to fa_icon("pen"), edit_issue_path(issue) %>
                                        <%= link_to fa_icon("trash"), issue, method: :delete, data: {
                                            confirm: 'Are you sure?' } %>
                                    </td>
                                </tr>
                                <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="12" class="text-right">
                                    <%= page_entries_info @issues %>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                    <div class="clearfix">&nbsp;</div>
                    <div class="row">
                        <div class="col-12">
                            <%= will_paginate @clients, list_classes: %w(pagination justify-content-center) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>