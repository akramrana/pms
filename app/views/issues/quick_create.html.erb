<%= form_with(model: @issue, data: { type: "json" }, remote: true) do |form| %>

    <div id="error_explanation"></div>

    <div class="row">
        <div class="col-12">
            <%= form.hidden_field :projectId %>
            <%= form.hidden_field :boardId %>
            <%= form.label :summary %>
            <%= form.text_field :summary, class: 'form-control' %>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <%= form.label :issueTypeId, "Issue Type" %>
                <%= form.collection_select(:issueTypeId, @issueTypes, :id, :issueTypeName, {:include_blank=>
                    "Please Select"}, {:class => "form-control"}) %>
        </div>
        <div class="col-6">
            <%= form.label :priorityTypeId, "Priority Type" %>
                <%= form.collection_select(:priorityTypeId, @priorityTypes, :id, :priorityTypeName, {:include_blank=>
                    "Please Select"}, {:class => "form-control"}) %>
        </div>
    </div>
    <div class="row">
        <div class="col-6">
            <%= form.label :reporter %>
                <%= form.collection_select(:reporter, @users, :id, :username, {:include_blank=> "Please
                    Select"}, {:class => "form-control"}) %>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <%= form.label :description %>
                <%= form.text_area :description, class: 'form-control' %>
        </div>
    </div>
    <div class="clearfix">&nbsp;</div>
    <div class="form-group">
        <%= form.submit 'Submit' , :class=> "btn btn-primary" %>
    </div>
    <% end %>