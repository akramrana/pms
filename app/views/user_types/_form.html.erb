<%= form_with(model: user_type, local: true) do |form| %>
<% if user_type.errors.any? %>
<div id="error_explanation">
    <h2><%= pluralize(user_type.errors.count, "error") %>:</h2>

    <ul>
        <% user_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="row">
    <div class="col-6">
        <%= form.label :userTypeName, "User Type" %>
        <%= form.text_field :userTypeName, class: 'form-control' %>
    </div>

</div>
<div class="clearfix">&nbsp;</div>
<div class="form-group">
    <%= form.submit 'Submit', :class => "btn btn-primary" %>
</div>
<% end %>