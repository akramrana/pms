<% content_for :title, "User Types" %>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <p id="notice"><%= notice %></p>
                <p class="float-right">
                    <%= link_to 'New User Type', new_user_type_path, class:"btn btn-success" %>
                </p>
                <table class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>User Type</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @user_types.each do |user_type| %>
                        <tr>
                            <td><%= user_type.userTypeName %></td>
                            <td>
                                <%= link_to fa_icon("eye"), user_type %>
                                <%= link_to fa_icon("pen"), edit_user_type_path(user_type) %>
                                <%= link_to fa_icon("trash"), user_type, method: :delete, data: { confirm: 'Are you sure?' } %>
                            </td>
                        </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>