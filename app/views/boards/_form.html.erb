<%= form_with(model: board, local: true) do |form| %>
  <% if board.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(board.errors.count, "error" ) %> prohibited this form being saved:
      </h2>

      <ul>
        <% board.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
          <% end %>
      </ul>
    </div>
    <% end %>
      <div class="row">
        <div class="col-6">
          <%= form.label :projectId, "Project" %>
            <%= form.collection_select(:projectId, @projects, :id, :projectName, {:include_blank=> "Please Select"},
              {:class => "form-control"}) %>
        </div>
        <div class="col-6">
          <%= form.label :boardName, "Board Name" %>
            <%= form.text_field :boardName, class: 'form-control' %>
        </div>
      </div>
      <div class="clearfix">&nbsp;</div>
      <div class="form-group">
        <%= form.submit 'Submit' , :class=> "btn btn-primary" %>
      </div>
      <% end %>