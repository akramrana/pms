<%= form_with(model: @board, data: { type: "json" }, remote: true) do |form| %>

    <div id="error_explanation"></div>

    <div class="row">
        <div class="col-12">
            <%= form.hidden_field :projectId %>
            <%= form.label :boardName, "Board Name" %>
            <%= form.text_field :boardName, class: 'form-control' %>
        </div>
    </div>
    
    <div class="clearfix">&nbsp;</div>
    <div class="form-group">
        <%= form.submit 'Submit' , :class=> "btn btn-primary" %>
    </div>
    <% end %>