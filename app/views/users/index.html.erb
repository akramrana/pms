<% content_for :title, "Users" %>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-6">
                            <p id="notice">
                                <%= notice %>
                            </p>
                            <%= form_tag(users_path, method: :get) do %>
                              <div class="row g-3 align-items-center">
                                  <div class="col-auto">
                                    <%= text_field_tag(:search, params[:search], class: 'form-control', placeholder: "Search") %>
                                  </div>
                                  <div class="col-auto">
                                    <%= submit_tag "Filter", class: "btn btn-success" %>
                                  </div>
                              </div>
                            <% end %>
                        </div>
                        <div class="col-6">
                            <p class="float-right">
                                <%= link_to 'New User' , new_user_path, class:"btn btn-success" %>
                            </p>
                        </div>
                    </div>
                    <table class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>Email</th>
                                <th>User Type</th>
                                <th>Created At</th>
                                <th>Updated At</th>
                                <th></th>
                            </tr>
                        </thead>

                        <tbody>
                            <% @users.each do |user| %>
                                <tr>
                                    <td>
                                        <%= user.username %>
                                    </td>
                                    <td>
                                        <%= user.email %>
                                    </td>
                                    <td>
                                        <%= user.userType.userTypeName %>
                                    </td>
                                    <td>
                                        <%= user.createTime %>
                                    </td>
                                    <td>
                                        <%= user.updateTime %>
                                    </td>
                                    <td>
                                        <%= link_to fa_icon("eye"), user %>
                                            <%= link_to fa_icon("pen"), edit_user_path(user) %>
                                                <%= link_to fa_icon("trash"), user, method: :delete, data: {
                                                    confirm: 'Are you sure?' } %>
                                    </td>
                                </tr>
                                <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6" class="text-right">
                                    <%= page_entries_info @users %>
                                </td>
                            </tr>
                        </tfoot>
                    </table>
                    <div class="clearfix">&nbsp;</div>
                    <div class="row">
                        <div class="col-12">
                            <%= will_paginate @clients, list_classes: %w(pagination justify-content-center) %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>