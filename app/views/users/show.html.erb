<% content_for :title, @user.username %>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-body">
        <p id="notice"><%= notice %></p>
        <p class="float-right">
          <%= link_to 'Update', edit_user_path(@user), class: "btn btn-primary" %>
          <%= link_to 'Back', users_path, class: "btn btn-info" %>
        </p>
        <table class="table table-striped table-bordered">
          <tbody>
            <tr>
              <th>
                Username
              </th>
              <td>
                <%= @user.username %>
              </td>
            </tr>
            <tr>
              <th>
                Email
              </th>
              <td>
                <%= @user.email %>
              </td>
            </tr>
            <tr>
              <th>
                User Type
              </th>
              <td>
                <%= @user.userType.userTypeName %>
              </td>
            </tr>
            <tr>
              <th>
                Created At
              </th>
              <td>
                <%= @user.createTime %>
              </td>
            </tr>
            <tr>
              <th>
                Updated At
              </th>
              <td>
                <%= @user.updateTime %>
              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-12">
            <h5>User Issues</h5>
            <div class="card">
                <div class="card-body">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Project</th>
                                <th>Issue Type</th>
                                <th>Summary</th>
                                <th>Priority Type</th>
                                <th>Reporter</th>
                                <th>Done?</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @user.issues.each do |issue| %>
                                <tr>
                                    <td>
                                        <%= issue.project.projectName %>
                                    </td>
                                    <td>
                                        <%= issue.issueType.issueTypeName %>
                                    </td>
                                    <td>
                                        <%= issue.summary %>
                                    </td>
                                    <td>
                                        <%= issue.priorityType.priorityTypeName %>
                                    </td>
                                    <td>
                                        <%= issue.reporterUser.username %>
                                    </td>
                                    <td>
                                        <% if issue.done == 1 %>
                                           <i class="fa fa-check mr-2 text-success" title="Done"></i>
                                        <% else %>
                                           <i class="fa fa-clock mr-2 text-danger" title="Not Done"></i>
                                        <% end %>

                                    </td>
                                    <td>
                                        <%= link_to fa_icon("eye"), issue %>
                                    </td>
                                </tr>
                                <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
</div>